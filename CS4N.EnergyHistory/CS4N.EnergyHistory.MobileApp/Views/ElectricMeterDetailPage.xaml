<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS4N.EnergyHistory.MobileApp.Views.ElectricMeterDetailPage"
             Title="ElectricMeter">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="12" Spacing="12">
                <Image x:Name="iconImage" HeightRequest="120" WidthRequest="120" HorizontalOptions="Center"/>
                <Label x:Name="nameLabel" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label x:Name="lastValueLabel" FontSize="16" HorizontalOptions="Center"/>
                <Label x:Name="numberLabel" FontSize="14" TextColor="Gray"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>