<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="CS4N.EnergyHistory.controller.StationDefinition">
	<Page id="myPage" busyIndicatorDelay="100" titleAlignment="Center">
		<customHeader>
			<Bar>
        <contentLeft>
          <Button type="Back" press="onBackPress"/>
        </contentLeft>
				<contentMiddle>
					<Image src="image/flash-energy-64.png" height="2rem"/>
					<Title text="{i18n>title_StationDefinition}"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
      <f:Form editable="true">
        <f:layout>
          <f:ResponsiveGridLayout  columnsL="1" />
        </f:layout>
        <f:formContainers>
          <f:FormContainer>
            <f:formElements>
              <f:FormElement label="{i18n>text_Name}">
                <f:fields>
                  <Input id="nameInput" required="true" value="{/station/name}" valueState="{/nameState}" placeholder="{i18n>place_UniqueName}"/>
                </f:fields>
              </f:FormElement>
              <f:FormElement label="{i18n>text_MaximumPerformance}">
                <f:fields>
                  <Input required="true" 
                         type="Number" 
                         textAlign="End" 
                         value="{/station/maxWattPeak}" 
                         valueState="{/maxWattPeakState}" 
                         placeholder="{i18n>place_MaxWattPeak}" 
                         description="{i18n>text_Watt}" />
                </f:fields>
              </f:FormElement>
            </f:formElements>
          </f:FormContainer>
        </f:formContainers>
      </f:Form>
		</content>
    <footer>
      <Bar>
        <contentRight>
          <Button icon="sap-icon://save" type="Accept" text="{i18n>text_Save}" width="150px" press="onSavePress" />
        </contentRight>
      </Bar>
    </footer>
	</Page>
</mvc:View>