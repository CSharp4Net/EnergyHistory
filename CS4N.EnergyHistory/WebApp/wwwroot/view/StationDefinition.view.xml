<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="CS4N.EnergyHistory.controller.StationDefinition">
  <Page id="myPage" busyIndicatorDelay="100" titleAlignment="Center">
    <customHeader>
      <Bar>
        <contentLeft>
          <Button type="Back" text="{i18n>text_Overview}" press="onBackPress"/>
        </contentLeft>
        <contentMiddle>
          <Image src="image/flash-energy-64.png" height="2rem"/>
          <Title text="{i18n>title_StationDefinition}"/>
        </contentMiddle>
      </Bar>
    </customHeader>
    <content>
      <IconTabBar expandable="false" stretchContentHeight="true" applyContentPadding="false" headerMode="Inline">
        <items>
          <IconTabFilter text="{i18n>text_Common}">
            <f:Form editable="true">
              <f:layout>
                <f:ResponsiveGridLayout  columnsL="1" />
              </f:layout>
              <f:formContainers>
                <f:FormContainer>
                  <f:formElements>
                    <f:FormElement label="{i18n>text_Name}">
                      <f:fields>
                        <Input id="nameInput" required="true" value="{/station/name}" valueState="{/nameState}" placeholder="{i18n>place_UniqueName}"/>
                      </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>text_Image}">
                      <f:fields>
                        <HBox renderType="Bare" alignItems="Center">
                          <Input value="{/station/iconUrl}" placeholder="sap-icon://photo-voltaic" />
                          <core:Icon src="{/station/iconUrl}" 
                                     class="sapUiTinyMarginBegin"
                                     size="2rem"
                                     color="Tile"/>
                          <Button icon="sap-icon://image-viewer" press="onIconExplorerPress" class="sapUiTinyMarginBegin" type="Emphasized" />
                        </HBox>
                      </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>text_MaximumPerformance}">
                      <f:fields>
                        <Input required="true"
                               type="Number"
                               textAlign="End"
                               value="{/station/maxWattPeak}"
                               valueState="{/maxWattPeakState}"
                               placeholder="{i18n>place_MaxWattPeak}" />
                        <Select selectedKey="{/station/powerUnit}" showSecondaryValues="true">
                          <core:ListItem key="W" text="{i18n>text_WattShortcut}" additionalText="{i18n>text_Watt}" />
                          <core:ListItem key="kW" text="{i18n>text_KilowattShortcut}" additionalText="{i18n>text_Kilowatt}" />
                          <core:ListItem key="MW" text="{i18n>text_MegawattShortcut}" additionalText="{i18n>text_Megawatt}" />
                          <core:ListItem key="GW" text="{i18n>text_GigawattShortcut}" additionalText="{i18n>text_Gigawatt}" />
                        </Select>
                      </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>text_CapacityUnit}">
                      <f:fields>
                        <Select selectedKey="{/station/capacityUnit}" showSecondaryValues="true">
                          <core:ListItem key="Wh" text="{i18n>text_WattHourShortcut}" additionalText="{i18n>text_WattHour}" />
                          <core:ListItem key="kWh" text="{i18n>text_KilowattHourShortcut}" additionalText="{i18n>text_KilowattHour}" />
                          <core:ListItem key="MWh" text="{i18n>text_MegawattHourShortcut}" additionalText="{i18n>text_MegawattHour}" />
                          <core:ListItem key="GWh" text="{i18n>text_GigawattHourShortcut}" additionalText="{i18n>text_GigawattHour}" />
                        </Select>
                      </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>text_InstalledAt}">
                      <f:fields>
                        <DatePicker value="{/station/installedAt}" valueFormat="yyyy-MM-dd" displayFormat="{i18n>format_Date}" />
                      </f:fields>
                    </f:FormElement>
                  </f:formElements>
                </f:FormContainer>
              </f:formContainers>
            </f:Form>
          </IconTabFilter>
          <IconTabFilter text="{i18n>text_Internal}">
            <f:Form editable="false">
              <f:layout>
                <f:ResponsiveGridLayout  columnsL="1" />
              </f:layout>
              <f:formContainers>
                <f:FormContainer>
                  <f:formElements>
                    <f:FormElement label="{i18n>text_Guid}">
                      <f:fields>
                        <Text text="{/station/guid}"/>
                      </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>text_CreatedAt}">
                      <f:fields>
                        <Text text="{ path: '/station/createdAt', formatter: '.formatDateTime' }"/>
                      </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>text_UpdatedAt}">
                      <f:fields>
                        <Text text="{ path: '/station/updatedAt', formatter: '.formatDateTime' }"/>
                      </f:fields>
                    </f:FormElement>
                  </f:formElements>
                </f:FormContainer>
              </f:formContainers>
            </f:Form>
          </IconTabFilter>
        </items>
      </IconTabBar>
    </content>
    <footer>
      <Bar>
        <contentLeft>
          <Button icon="sap-icon://delete" type="Reject" text="{i18n>text_Delete}" width="150px" press="onDeletePress" visible="{= !${/newRecord} }" />
        </contentLeft>
        <contentRight>
          <Button icon="sap-icon://save" type="Accept" text="{i18n>text_Save}" width="150px" press="onSavePress" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>