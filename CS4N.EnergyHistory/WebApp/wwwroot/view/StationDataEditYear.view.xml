<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="CS4N.EnergyHistory.controller.StationDataEditYear">
  <Page id="myPage" busyIndicatorDelay="100" titleAlignment="Center">
    <customHeader>
      <Bar>
        <contentLeft>
          <Button type="Back" text="{i18n>text_Record}" press="onBackPress"/>
        </contentLeft>
        <contentMiddle>
          <Image src="image/flash-energy-64.png" height="2rem"/>
          <Title text="{/viewData/yearData/number}"/>
        </contentMiddle>
      </Bar>
    </customHeader>
    <content>
      <f:Form editable="true">
        <f:layout>
          <f:ResponsiveGridLayout columnsL="1" />
        </f:layout>
        <f:formContainers>
          <f:FormContainer>
            <f:formElements>
              <f:FormElement label="{i18n>text_Collected}">
                <f:fields>
                  <HBox renderType="Bare">
                    <Input id="collectedTotalInput"
                           value="{/viewData/yearData/collectedTotal}"
                           valueState="{/collectedTotalState}"
                           type="Number"
                           textAlign="End"
                           placeholder="0"
                           editable="{= !${/viewData/yearData/automaticSummation} }"/>
                    <Text text="{/viewData/stationDefinition/capacityUnit}" class="sapUiTinyMarginBegin" width="10%" />
                  </HBox>
                </f:fields>
              </f:FormElement>
              <f:FormElement label="{i18n>text_Summation}">
                <f:fields>
                  <HBox renderType="Bare">
                    <Switch state="{/viewData/yearData/automaticSummation}" type="AcceptReject" />
                    <Text text="{i18n>place_AutomaticSummationOfYear}" />
                  </HBox>
                </f:fields>
              </f:FormElement>
            </f:formElements>
          </f:FormContainer>
        </f:formContainers>
      </f:Form>
      <Table items="{/viewData/yearData/months}" alternateRowColors="true" fixedLayout="false">
        <columns>
          <Column>
            <Text text="{i18n>text_Month}" />
          </Column>
          <Column hAlign="End">
            <Text text="{i18n>text_Collected}" />
          </Column>
        </columns>
        <items>
          <ColumnListItem vAlign="Middle">
            <cells>
              <Text text="{ path: 'number', formatter: '.formatMonth' }" />
              <HBox renderType="Bare" alignItems="Center">
                <Input value="{collectedTotal}"
                       type="Number"
                       textAlign="End"
                       valueLiveUpdate="true"
                       placeholder="0"
                       change="onMonthCollectedTotalChange"/>
                <Text text="{/viewData/stationDefinition/capacityUnit}" class="sapUiTinyMarginBegin" wrappingType="Hyphenated" />
              </HBox>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
  </Page>
</mvc:View>