<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="CS4N.EnergyHistory.controller.Cockpit">
  <Page id="myPage" busyIndicatorDelay="100" titleAlignment="Center">
    <customHeader>
      <Bar>
        <contentMiddle>
          <Image src="image/flash-energy-64.png" height="2rem"/>
          <Title text="{i18n>title_Cockpit}"/>
        </contentMiddle>
      </Bar>
    </customHeader>
    <content>
      <IconTabBar id="myTabBar" expandable="false" stretchContentHeight="true" select="onTabSelect" applyContentPadding="false">
        <items>
          <IconTabFilter key="stations" text="{i18n>text_Stations}" count="{/stationCount}" design="Horizontal" showAll="true" />
          <IconTabFilter key="settings" text="{i18n>text_Settings}" />
        </items>
        <content>
          <HBox id="myTiles" items="{/items}">
            <GenericTile header="{name}" press="onTilePress" class="sapUiTinyMargin">
              <TileContent unit="{kpiUnit}">
                <NumericContent value="{kpiValue}" icon="{iconUrl}"/>
              </TileContent>
            </GenericTile>
          </HBox>
        </content>
      </IconTabBar>
    </content>
  </Page>
</mvc:View>