<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="CS4N.EnergyHistory.controller.SolarStationDefinitionOverview">
  <Page id="myPage" busyIndicatorDelay="100" titleAlignment="Center">
    <customHeader>
      <Bar>
        <contentLeft>
          <Button type="Back" text="{i18n>text_Cockpit}" press="onBackPress"/>
        </contentLeft>
        <contentMiddle>
          <Image src="image/flash-energy-64.png" height="2rem"/>
          <Title text="{i18n>title_SolarStationDefinitionOverview}"/>
        </contentMiddle>
      </Bar>
    </customHeader>
    <content>
      <Table items="{/definitions}" alternateRowColors="true" fixedLayout="false" class="sapUiSizeCozy" noDataText="{i18n>text_NoRecords}">
        <columns>
          <Column>
            <Text text="{i18n>text_Station}" />
          </Column>
          <Column hAlign="End">
            <Text text="{i18n>text_MaximumPerformance}" />
          </Column>
        </columns>
        <items>
          <ColumnListItem vAlign="Middle" type="Navigation" press="onStationPress">
            <cells>
              <HBox renderType="Bare" alignItems="Center">
                <core:Icon src="{iconUrl}" size="2rem" color="Tile"/>
                <Text text="{name}" class="sapUiTinyMarginBegin"/>
              </HBox>
              <Text text="{ parts: ['powerPeak', 'powerUnit'], formatter: '.formatPowerValue' }"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    <footer>
      <Bar>
        <contentRight>
          <Button icon="sap-icon://add" press="onAddPress" type="Accept" text="{i18n>text_Add}" width="150px" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>