<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="CS4N.EnergyHistory.controller.Station">
	<Page id="myPage" busyIndicatorDelay="100" titleAlignment="Center">
		<customHeader>
			<Bar>
        <contentLeft>
          <Button type="Back" press="onBackPress"/>
        </contentLeft>
				<contentMiddle>
					<Image src="image/flash-energy-pastel-32.png" height="2rem"/>
					<Title text="{/pageTitle}"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
      <Panel expandable="true" expanded="true">

        <content></content>
      </Panel>
      <Panel width="auto" id="chartPanel" expandable="true" expanded="{/chartPanelIsExpanded}" expand="onChartPanelExpand" expandAnimation="false">
        <headerToolbar>
          <Toolbar class="sapUiTinyMarginBottom">
            <Text text="{i18n>text_TimePeriod}"/>
            <Select selectedKey="{/selectedTimePeriod}">
              <core:ListItem key="Month" text="{i18n>text_Month}"/>
              <core:ListItem key="Year" text="{i18n>text_Year}" />
            </Select>
            <ToolbarSpacer/>
            <Button icon="sap-icon://edit" press="onEditPress"/>
          </Toolbar>
        </headerToolbar>
      </Panel>
    </content>
	</Page>
</mvc:View>