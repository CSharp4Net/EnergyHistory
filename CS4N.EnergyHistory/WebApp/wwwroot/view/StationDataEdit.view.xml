<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="CS4N.EnergyHistory.controller.StationDataEdit">
  <Page id="myPage" busyIndicatorDelay="100" titleAlignment="Center">
    <customHeader>
      <Bar>
        <contentLeft>
          <Button type="Back" text="{/viewData/stationDefinition/name}" press="onBackPress"/>
        </contentLeft>
        <contentMiddle>
          <Image src="image/flash-energy-64.png" height="2rem"/>
          <Title text="{i18n>text_Record}"/>
        </contentMiddle>
        <contentRight>
          <Button icon="sap-icon://add" class="sapUiTinyMarginBegin" press="onAddYearPress" text="{i18n>text_Year}" />
        </contentRight>
      </Bar>
    </customHeader>
    <content>
      <f:Form editable="true">
        <f:layout>
          <f:ResponsiveGridLayout columnsM="2" labelSpanS="4" labelSpanM="4" />
        </f:layout>
        <f:formContainers>
          <f:FormContainer>
            <f:formElements>
              <f:FormElement label="{i18n>text_Collected}">
                <f:fields>
                  <Input id="collectedTotalInput"
                         value="{/viewData/stationData/collectedTotal}"
                         valueState="{/collectedTotalState}"
                         type="Number"
                         textAlign="End"
                         placeholder="0"
                         editable="false"
                         description="{/viewData/stationDefinition/capacityUnit}"/>
                </f:fields>
              </f:FormElement>
            </f:formElements>
          </f:FormContainer>
        </f:formContainers>
      </f:Form>
      <Table items="{ path: '/viewData/stationData/years', sorter: { path: 'number', descending: true } }" alternateRowColors="true" fixedLayout="false">
        <columns>
          <Column>
            <HBox renderType="Bare" alignItems="Center">
              <Text text="{i18n>text_Year}" />
            </HBox>
          </Column>
          <Column hAlign="End">
            <Text text="{i18n>text_Collected}" />
          </Column>
          <!--<Column hAlign="End" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline">
            <Text text="{i18n>text_PriceOfConsumedKilowattHour}" />
          </Column>-->
        </columns>
        <items>
          <ColumnListItem vAlign="Middle" type="Navigation" press="onYearPress">
            <cells>
              <Text text="{number}" />
              <Text text="{ parts: ['collectedTotal', '/viewData/stationDefinition/capacityUnit'], formatter: '.formatPowerValue' }" />
              <!--<Text text="{ parts: ['priceOfConsumedKilowattHour', '/viewData/stationDefinition/currencyUnit'], formatter: '.formatPowerValue' }" />-->
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    <footer>
      <Bar>
        <contentRight>
          <Button text="{i18n>text_Save}" type="Accept" icon="sap-icon://save" width="150px" press="onSavePress" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>