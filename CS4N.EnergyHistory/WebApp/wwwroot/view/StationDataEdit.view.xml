<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="CS4N.EnergyHistory.controller.StationDataEdit">
  <Page id="myPage" busyIndicatorDelay="100" titleAlignment="Center">
    <customHeader>
      <Bar>
        <contentLeft>
          <Button type="Back" text="{/viewData/stationDefinition/name}" press="onBackPress"/>
        </contentLeft>
        <contentMiddle>
          <Image src="image/flash-energy-64.png" height="2rem"/>
          <Title text="{i18n>text_Record}"/>
        </contentMiddle>
      </Bar>
    </customHeader>
    <content>
      <f:Form editable="true">
        <f:layout>
          <f:ResponsiveGridLayout columnsM="2" />
        </f:layout>
        <f:formContainers>
          <f:FormContainer>
            <f:formElements>
              <f:FormElement label="{i18n>text_Collected}">
                <f:fields>
                  <HBox renderType="Bare">
                    <Input id="collectedTotalInput"
                           value="{/viewData/stationData/collectedTotal}"
                           valueState="{/collectedTotalState}"
                           type="Number"
                           textAlign="End"
                           placeholder="0"
                           editable="{= !${/viewData/stationData/automaticSummation} }"/>
                    <Text text="{/viewData/stationDefinition/capacityUnit}" class="sapUiTinyMarginBegin" width="10%" />
                  </HBox>
                </f:fields>
              </f:FormElement>
              <f:FormElement label="{i18n>text_Summation}">
                <f:fields>
                  <HBox renderType="Bare">
                    <Switch state="{/viewData/stationData/automaticSummation}" type="AcceptReject" />
                    <Text text="{i18n>place_AutomaticSummationOfTotal}" />
                  </HBox>
                </f:fields>
              </f:FormElement>
            </f:formElements>
          </f:FormContainer>
        </f:formContainers>
      </f:Form>
      <Table items="{/viewData/stationData/years}" alternateRowColors="true" fixedLayout="false" class="sapUiSizeCompact">
        <columns>
          <Column>
            <HBox renderType="Bare" alignItems="Center">
              <Text text="{i18n>text_Year}" />
              <Button icon="sap-icon://add" type="Accept" class="sapUiTinyMarginBegin" press="onAddYearPress" />
            </HBox>
          </Column>
          <Column hAlign="End">
            <Text text="{i18n>text_Collected}" />
          </Column>
          <Column hAlign="End">
            <Text text="{i18n>text_PriceOfConsumedKilowattHour}" />
          </Column>
        </columns>
        <items>
          <ColumnListItem vAlign="Middle" type="Navigation" press="onYearPress">
            <cells>
              <Text text="{number}" />
              <Text text="{ parts: ['collectedTotal', '/viewData/stationDefinition/capacityUnit'], formatter: '.formatPowerValue' }" />
              <Text text="{ parts: ['priceOfConsumedKilowattHour', '/viewData/stationDefinition/currencyUnit'], formatter: '.formatPowerValue' }" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    <footer>
      <Bar>
        <contentRight>
          <Button text="{i18n>text_Save}" type="Accept" icon="sap-icon://save" width="150px" press="onSavePress" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>